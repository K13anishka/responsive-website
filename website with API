        <!-- Button to change background color -->
        <button id="colorButton">Change Background Color</button>

        <!-- Button to fetch user data -->
        <button id="fetchDataButton" style="margin-left:10px;background-color:#ff9800;">Fetch Sample User Data</button>

        <!-- Container to show the fetched data -->
        <div class="fetched-data" id="fetchedData">
            <h2>Sample Users</h2>
            <ul id="userList">
                <!-- Dynamically populated -->
            </ul>

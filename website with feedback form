        <button id="colorButton">Change Background Color</button>
        <button id="fetchDataButton" class="special" style="margin-left:10px;">Fetch Sample User Data</button>

        <div class="fetched-data" id="fetchedData">
            <h2>Sample Users</h2>
            <ul id="userList"></ul>
        </div>

        <!-- User Input Form -->
        <form id="contactForm" novalidate>
            <div class="success-msg" id="successMsg"></div>
            <div class="form-group">
                <label for="name">Name<span style="color:#c62828">*</span></label>
                <input type="text" id="name" name="name" required>
                <div class="error-msg" id="nameError"></div>
            </div>
            <div class="form-group">
                <label for="email">Email<span style="color:#c62828">*</span></label>
                <input type="email" id="email" name="email" required>
                <div class="error-msg" id="emailError"></div>
            </div>
            <div class="form-group">
                <label for="message">Message<span style="color:#c62828">*</span></label>
                <textarea id="message" name="message" required></textarea>
                <div class="error-msg" id="messageError"></div>
            </div>
            <button type="submit">Submit</button>
        </form>

        <div class="footer">
            &copy; 2025 India Country Profile
        </div>
